<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="SummerPractise">
        <addColumn tableName="ORDER_">
            <column name="ADDRESS" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="ADDRESS" defaultNullValue="''" tableName="ORDER_"/>
    </changeSet>
    <changeSet id="2" author="SummerPractise">
        <addColumn tableName="RESTAURANT">
            <column name="ADDRESS" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="ADDRESS" defaultNullValue="''" tableName="RESTAURANT"/>
    </changeSet>
    <changeSet id="3" author="SummerPractise">
        <dropForeignKeyConstraint baseTableName="order_" constraintName="fk_order__on_address"/>
    </changeSet>
    <changeSet id="4" author="SummerPractise">
        <dropForeignKeyConstraint baseTableName="restaurant" constraintName="fk_restaurant_on_address"/>
    </changeSet>
    <changeSet id="5" author="SummerPractise">
        <dropUniqueConstraint constraintName="uc_address_street" tableName="address"/>
    </changeSet>
    <changeSet id="6" author="SummerPractise">
        <dropTable cascadeConstraints="true" tableName="address"/>
    </changeSet>
</databaseChangeLog>