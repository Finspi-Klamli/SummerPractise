<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:maps="http://jmix.io/schema/maps/ui"
        caption="msg://restaurantEdit.caption"
        focusComponent="form">
    <data>
        <instance id="restaurantDc"
                  class="com.belov.jmixapplication.entity.Restaurant">
            <fetchPlan extends="_base">
                <property name="address" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="restaurantDc">
            <column width="350px">
                <textField id="coordinatesField" property="coordinates"/>
                <textField id="nameField" property="name"/>
                <entityPicker id="addressField" property="address">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <entityPicker id="deliveryZoneField" property="deliveryZone">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
            </column>
        </form>
        <maps:geoMap id="map" height="400px" width="600px" centerX="-97.327194"  centerY="37.681918" zoom="12">
            <maps:layers selectedLayer="restaurantLayer">
                <maps:tile id="tileLayer" tileProvider="map_OpenStreetMap"/>
                <maps:vector id="restaurantLayer"
                             dataContainer="restaurantDc"
                             editable="true"/>
            </maps:layers>
        </maps:geoMap>
        <hbox id="editActions" spacing="true">t
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
